# Variables de entorno para LM Studio Docker

# Configuración de puertos
LMSTUDIO_API_PORT=1234
NOVNC_WEB_PORT=6080
VNC_DIRECT_PORT=5900

# Configuración de recursos
MEMORY_LIMIT=8G
MEMORY_RESERVATION=4G

# Configuración de LM Studio
LMSTUDIO_HOST=0.0.0.0
LMSTUDIO_MODELS_PATH=/home/lmstudio/models
LMSTUDIO_CACHE_PATH=/home/lmstudio/.cache/lm-studio

# Configuración de VNC
VNC_PASSWORD=lmstudio
DISPLAY=:1

# Configuración de descarga automática de modelos
AUTO_DOWNLOAD_MODELS=true
DOWNLOAD_LIGHTWEIGHT_MODELS=true

# Configuración de logs
LOG_LEVEL=INFO